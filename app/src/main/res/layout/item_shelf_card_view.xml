<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shelf_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brownColor400"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brownColor400"
        android:padding="@dimen/dimens_8dp">


        <TextView
            android:id="@+id/shelf_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_24dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Shelf"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/book_cover_0"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/book_cover_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shelf_title"
            tools:src="@drawable/ic_book" />


        <ImageView
            android:id="@+id/book_cover_1"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@id/book_cover_2"
            app:layout_constraintStart_toEndOf="@id/book_cover_0"
            app:layout_constraintTop_toTopOf="@+id/book_cover_0"
            tools:src="@drawable/ic_book" />

        <ImageView
            android:id="@+id/book_cover_2"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@id/book_cover_3"
            app:layout_constraintStart_toEndOf="@id/book_cover_1"
            app:layout_constraintTop_toTopOf="@+id/book_cover_1"
            tools:src="@drawable/ic_book" />

        <ImageView
            android:id="@+id/book_cover_3"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@id/book_cover_4"
            app:layout_constraintStart_toEndOf="@id/book_cover_2"
            app:layout_constraintTop_toTopOf="@+id/book_cover_2"
            tools:src="@drawable/ic_book" />

        <ImageView
            android:id="@+id/book_cover_4"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_cover_3"
            app:layout_constraintTop_toTopOf="@+id/book_cover_3"
            tools:src="@drawable/ic_book" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
